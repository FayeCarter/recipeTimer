{
  "name": "Recipie Timer",
  "version": "1.0",
  "description": "Calculate real recipe timings",
  "manifest_version": 2,
  "permissions": ["activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://www.bbcgoodfood.com/recipes/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Recipe App",
    "default_popup": "popup.html"
  }
}
